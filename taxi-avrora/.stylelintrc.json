{
    "extends": "stylelint-config-standard",
    "plugins": [
        "stylelint-order"
    ],
    "rules":
    {
        "indentation": 4,
        "declaration-empty-line-before": [
            "always",
            {
                "except": [
                    "first-nested"
                ],
                "ignore": [
                    "after-declaration",
                    "after-comment"
                ]
            }
        ],
        "number-leading-zero": "never"
    },
    "ignoreFiles": [
        "**/*.js",
        "**/*.json"
    ]
}
